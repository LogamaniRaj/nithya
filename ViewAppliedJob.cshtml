@model IEnumerable<Mvc_JobPortal_FinalProject.Models.EmployerMODEL>

@{
    ViewBag.Title = "ViewAppliedJob";
    Layout = "~/Views/Shared/Employer_Layout.cshtml";
}

<h2 style="font-family:Forte">Applicants List</h2>


<table align="center" border="1" style="text-align:center ;width:1400px;font-family:Forte;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JSEmailID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplyDate)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JSEmailID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ApplyDate)
            </td>


        </tr>
    }

</table>
