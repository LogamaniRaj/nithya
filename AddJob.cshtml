@model Mvc_JobPortal_FinalProject.Models.EmployerMODEL

@{
    ViewBag.Title = "AddJob";
    Layout = "~/Views/Shared/Employer_Layout.cshtml";
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/jqueryui")
@Styles.Render("~/Content/themes/base/css")
<script type="text/javascript">
    $(document).ready(function () {
        $("#LastDateToApply").datepicker({ dateFormat: "mm/dd/yy", changeMonth: true, changeYear: true });
       
    });
</script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <br />
    <br />
    <fieldset>
        <legend style="font-family:Forte">Add Job</legend>    
     <br />
        <table align="center" style="text-align:left; font-family:Forte;">
            <tr>
                <td >
                    <div class="editor-label">
                        @Html.LabelFor(model => model.JobTitle)
                    </div>
                </td>
                <td >
                    <div class="editor-field">
                        @Html.EditorFor(model => model.JobTitle)
                        @Html.ValidationMessageFor(model => model.JobTitle)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.JobDesc)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.TextAreaFor(model => model.JobDesc)
                        @Html.ValidationMessageFor(model => model.JobDesc)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.JobLocation)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.DropDownListFor(model => model.JobLocation, ViewBag.cities as IEnumerable<SelectListItem>, "Select")
                        @Html.ValidationMessageFor(model => model.JobLocation)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.IndustryType)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.IndustryType)
                        @Html.ValidationMessageFor(model => model.IndustryType)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.FunctionalArea)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.FunctionalArea)
                        @Html.ValidationMessageFor(model => model.FunctionalArea)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Qualifications)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.TextAreaFor(model => model.Qualifications)
                        @Html.ValidationMessageFor(model => model.Qualifications)
                    </div>
                </td>
            </tr>

            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.MinExp)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.MinExp)
                        @Html.ValidationMessageFor(model => model.MinExp)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.MaxExp)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.MaxExp)
                        @Html.ValidationMessageFor(model => model.MaxExp)
                    </div>
                </td>
            </tr>

            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Salary)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Salary)
                        @Html.ValidationMessageFor(model => model.Salary)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.NoOfVacancies)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.NoOfVacancies)
                        @Html.ValidationMessageFor(model => model.NoOfVacancies)
                    </div>
                </td>
            </tr>

            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.LastDateToApply)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.TextBox("LastDateToApply", "")
                        @Html.ValidationMessageFor(model => model.LastDateToApply)
                    </div>
                </td>
            </tr>
            <tr>
                <td height="20"></td>
            </tr>
            <tr>
                <td colspan="2" align="center" >
                    <input type="submit" value="Add Job" style="height:35px;font-size:22px;font-family:Forte;" />
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    @ViewBag.addjob
                </td>
            </tr>
        </table>        
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Home", "Index")
</div>

